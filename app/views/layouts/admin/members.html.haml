!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      Agilar Taskboard - Members -
      = controller.action_name
    = stylesheet_link_tag 'scaffold', 'admin'
    = javascript_include_tag :defaults
    = javascript_include_tag 'slider', 'color_picker'
  %body
    #admin-dummy-container
      = render :partial => 'layouts/admin/header', :locals => { :controller => request_controller() }
      #admin-container
        #admin-content
          = yield
        - if !defined?(@hide_sidebar) || (defined?(@hide_sidebar) && (!@hide_sidebar))
          #admin-sidebar
            %ul#admin-sidebar-menu
              - image = image_tag 'admin/add.png', :alt => 'new'
              %li
                = link_to_remote "new member #{image}", :url => { :action => :new }, :update => "dummy-for-actions"
              - image = image_tag 'admin/bug.png', :alt => "bug"
              %li
                = link_to "report bug #{image}", "/report_bug"

    #dummy-for-actions
    = render :partial => 'layouts/admin/dialog_background_fade'