<div id="header">
<%= admin_open_div(1000) -%>
<div id="admin-user-info">
	<div id="admin-user-info-picture" style="float:right;">
		<%= image_tag @member.show_picture -%>
	</div>

	<div id="admin-user-info-text" style="float:right; margin-right: 5px">
		<p>Welcome, <span class="admin-user-info-text-user"><%= @member.name %></span></p>
		<% if @member.admin? -%>
			<p class="admin-user-info-text-role">You are a System Administrator</p>
		<% end -%>
		<p id="admin-user-info-links" class="admin-user-info-text-role">[ <%= link_to "logout", :controller => "/logout" %> | edit profile ]</p>
	</div>
</div>

<%= image_tag "agilar_logo.png", :alt => "Agilar" -%>
<%= admin_close_div(1000) -%>
</div>