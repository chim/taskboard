!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      Agilar Taskboard - Organizations -
      = controller.action_name
    = stylesheet_link_tag 'scaffold', 'admin'
    = javascript_include_tag :defaults
    = javascript_include_tag 'slider', 'color_picker'
  %body
    #admin-dummy-container
      = render :partial => 'layouts/admin/header', :locals => { :controller => request_controller() }
      #admin-container
        #admin-content
          = yield
        #admin-sidebar
          %ul#admin-sidebar-menu
            - if current_member.admin?
              %li
                = link_to_remote "new organization" + image_tag('admin/add.png', :alt => 'new'), :url => { :action => :new }, :update => "dummy-for-actions"
              %li
                = link_to_remote "send invitation" + image_tag('admin/invite.png', :alt => 'invite'), :url => { :action => :invite }, :update => "dummy-for-actions"
            %li
              = link_to "report bug " + image_tag('admin/bug.png', :alt => "bug"), "/report_bug"
    #dummy-for-actions
    = render :partial => 'layouts/admin/dialog_background_fade'
