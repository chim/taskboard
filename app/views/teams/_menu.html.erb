<div id="menu_space">
</div>
<div id="menu">
	<a href="#" onClick="collapseMenu('backlog');"><%= image_tag 'menu_collapse.png', :border => 0, :style => "float:left;" -%></a>

	<%= link_to image_tag('menu_taskboard.png', 
			:border => 0, 
			:id => "menu_taskboard_image"), 
		:controller => "taskboard",
		:action => "show",
		:id => project.id
	-%>
	<%= link_to image_tag('menu_product_backlog.png', 
			:border => 0, 
			:id => "menu_product_backlog_image"), 
		:controller => "backlog", 
		:project => @project.id 
	-%>

	<%= link_to_remote image_tag('menu_add_team.png',
				:border => 0,
				:id => "menu_add_team_image"),
		:url => {
			:action => 'show_form', 
			:project => project.id } 
	-%>

	<%= link_to_remote image_tag('menu_add_member.png',
				:border => 0,
				:id => "menu_add_member_image"),
		:url => {
			:controller => "members",
			:action => 'show_form', 
			:project => project.id } 
	-%>

	<%= render :partial => "members_list", :locals => { :members => @members }%>
	<%= image_tag 'menu_trash.png' , :border => 0, :id => 'trash' -%>
	<%= drop_receiving_element("trash", 
		:accept => "team_member", 
		:with   => "'member=' + (element.id.split('-').last()) + '&team='+element.id.split('-')[1]", 
		:url => { :action=>:remove_member}) 
	%>
</div>

<div id="menu_expand" style="position:absolute; top: 0px; left: 0px; z-index: 9; background: url('/images/menu_collapsed_background.png') left no-repeat transparent; height: 61px;width: 69px;">
	<a href="#" onClick="expandMenu('backlog');"><%= image_tag('menu_expand.png', :border => 0, :style => "position: relative; top: 11px; left: 14px;")-%></a>
</div>
<script>
	expandMenu('backlog');
</script>
