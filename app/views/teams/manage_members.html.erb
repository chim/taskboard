<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Username</th>
    <th>Password</th>
  </tr>

<% for member in @team.members %>
  <tr>
    <td><%=h member.name %></td>
    <td><%=h member.color %></td>
    <td><%=h member.username %></td>
    <td><%=h member.password %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add member to team', :action => 'add_member_to_team', :id => @team %>
