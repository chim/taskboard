<% for team in teams %>
	<div id="team-<%= team.id %>" class="team" style="border-color: #<%= team.color %>">
		<div class="team_card">
			<%= team.name -%> (<%= team.members.count -%>) [ <%= link_to_remote 'edit', :url => { :action => 'show_form', :team => team.id, :project => project.id } -%> ]
		</div>
		<div class="team_paginate">
			<a href="javascript:team_<%= team.id -%>_members_slider.prev();"><%= image_tag "less.png", :id => "team_#{team.id}_members_slider_prev", :alt => "more", :class => "less", :style => "border: none;" -%></a>
			<a href="javascript:team_<%= team.id -%>_members_slider.next();"><%= image_tag "more.png", :id => "team_#{team.id}_members_slider_next", :alt => "more", :class => "more", :style => "border: none;" -%></a>
		</div>
		<div id="team-members-list-<%= team.id %>">
			<%= render :partial => 'team_members_list', :locals => {:team => team } -%>
		</div>
	</div>
	<%= drop_receiving_element("team-#{team.id}", 
		:accept => "add_member", 
		:with   => "'member=' + (element.id.split('-').last())+ '&team=#{team.id}&project=#{project.id}'", 
		:url => { :controller => 'teams', :action=>:add_member }) 
	%>

<% end %>
