<table>
  <tr>
    <th>Name</th>
    <th>Story</th>
    <th>Description</th>
    <th>Status</th>
  </tr>

<% for task in @tasks %>
<tr class="<%= cycle('listing-even', 'listing-odd') %>">
    <td>
		<%=h task.name %>
		[
		<%= link_to 'Show', task %> |
	    <%= link_to 'Edit', edit_task_path(task) %> |
	    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %>
		]
	</td>
    <td><%=h task.story_id %></td>
    <td><%=h task.description %></td>
    <td><%=h task.status %></td>
  </tr>
<% end %>
<tr id="table_footer">
	<td colspan=4>
		<%= link_to 'New task', new_task_path %>
	</td>
</tr>
</table>

