<h1>New statustag</h1>

<% form_for(@statustag) do |f| %>
  <%= f.error_messages %>

  <p>
	<%= unless @tasks.nil?
		    select_tag(:task_id, options_for_select(@tasks))
		end
	%> 
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', statustags_path %>
