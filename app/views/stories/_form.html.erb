<script>
$('adder-container').show();
Effect.ScrollTo($('adder-container'), {duration:0.3});
</script>
<div id="form-add-story" class="dynamic-form" style="display: none;">
<% remote_form_for story, :update => { :success => 'dummy-for-actions' } do |f| %>
  <%= f.error_messages %>
	<%= unless @project.nil?
 		project.name
		hidden_field_tag(:project_id, "#{@project.id}")
		else 
		    select_tag(:project_id, options_for_select(@projects))
		end
	%> 
    ID <%= f.text_field :realid, :value => next_realid(@last_realid), :size => 3 %><br />
    <%= f.label :name %> <%= f.text_field :name %><br />
    <%= f.label :priority %> <%= f.text_field :priority, :size => 3 %><br />
    <%= f.label :size %> <%= f.text_field :size, :size => 3 %><br />
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 2 %><br />
    <%= button_to_function "Cancel", "cancel($('form-add-story'));", :id => "form-add-story-cancel"-%>
    <%= hidden_field_tag(:dynamic, "true") %>

    <%= f.submit "Save", :id => "form-add-story-submit" -%>
<% end %>
<script>
	centerTo($('form-add-story'),$('adder-container'));
	Effect.Appear($('form-add-story'));
</script>
