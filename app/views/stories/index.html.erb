<h1>Stories</h1>
<hr />
<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Priority</th>
    <th>Size</th>
    <th>Requirement</th>
    <th>How to demo</th>
  </tr>

<% for story in @stories %>
  <tr class="<%= cycle('listing-even', 'listing-odd') %>">
    <td>
		(<%=h story.realid -%>) <%=h story.name %><br />
		[
		<%= link_to 'Show', story %> |
	    <%= link_to 'Edit', edit_story_path(story) %> |
	    <%= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete %>
	    ]
	</td>
    <td><%=h story.project.name %></td>
    <td><%=h story.priority %></td>
    <td><%=h story.size %></td>
    <td><%=h story.requirement %></td>
    <td><%=h story.how_to_demo %></td>
  </tr>
<% end %>

<tr id="table_footer">
	<td colspan=6>
		<%= link_to 'New story', new_story_path %>
	</td>
</tr>
</table>
