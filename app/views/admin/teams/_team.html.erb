<div id="team-<%= team.id %>" class="team" style="margin-right: 10px; float: left;">
	<%= admin_open_div(300) -%>
	<div id="admin-div-team-top-name" style="">
		<script>
			ids<%= team.id %> = new Array('admin-div-team-members-<%= team.id %>');
		</script>			
		<h1 id="team-<%= team.id -%>-team"><%=h truncate(team.name) -%></h1>
		<%= link_to_remote image_tag("admin/admin-div-actions-edit.png", :alt => "Edit"), :url => { :action => :show_form, :id => team.id, :project => project.id  } -%>
		<%= link_to_remote image_tag("admin/admin-div-actions-remove.png", :alt => "Remove"), 
				:url => admin_team_url(team.id), 
				:method => :delete,
				:confirm => "Are you sure?",
				:success => "Effect.Puff($('team-#{team.id}'));"
		-%>

	</div>
	<div style="margin-top: 10px; width: 40px; position: absolute; top: 45px; left: 250px;">
		<%= image_tag "more.png", :id => "team_#{team.id}_members_slider_next",:alt => "more", :class => "more", :style => "position: absolute; top: 0px; border: none; margin-bottom: 10px;", :onClick => "team_#{team.id}_members_slider.next();" -%>
		<%= image_tag "less.png", :id => "team_#{team.id}_members_slider_prev", :alt => "less", :class => "less", :style => "border: none; position: absolute; top: 45px;", :onClick => "team_#{team.id}_members_slider.prev();" %>
	</div>
	<div  id="team_members_list-<%= team.id %>" style="position: relative; top: 20px; margin: 0 auto;">
		<%= render :partial => 'team_members_list', :locals => { :team => team } %>
	</div>
	<div style="clear: both;"></div>
	<div id="team-members-list-<%= team.id %>">
	</div>
	<%= admin_close_div(300) -%>

</div>
<%= drop_receiving_element("team-#{team.id}", 
	:accept => "member", 
	:with   => "'member=' + (element.id.split('-').last())+ '&team=#{team.id}&project=#{project.id}'", 
	:url => { :controller => 'teams', :action=>:add_member }) 
%>
