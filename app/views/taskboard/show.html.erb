<%= render :partial => "menu" , :locals => { :team => @member_team }-%> 
<%= render :partial => "adder" -%>
<div id="container">
<table>
<tr>
	<th style="width: 190px;"><%= @project.name-%></th>
	<th style="width: 25%; <%= taskboard_border_style(@color, [ "left", "bottom"]) -%>"><%= image_tag "taskboard_not_started.png", :alt => "Not Started" -%></th>
	<th style="width: 50%; <%= taskboard_border_style(@color, [ "left", "bottom"]) -%>"><%= image_tag "taskboard_in_progress.png", :alt => "In Progress" -%></th>
	<th style="width: 25%; <%= taskboard_border_style(@color, [ "left", "right", "bottom"]) -%>"><%= image_tag "taskboard_finished.png", :alt => "Finished" -%></th>
</tr>
<% for story in @stories_by_priority %>
	<% if story.priority != -1 -%>
		<tr id="story-<%= story.id %>">
			<%= render :partial => "stories/show", :locals => { :story => story, :project => @project } %> 
		</tr>
	<% end -%>
<% end %>
</table>
</div>
<%= drop_receiving_element("taskboard", 
	:accept => "statustag", 
	:with   => "'project_id='+ (element.id.split('-')[2]) +'&statustag_id=' + (element.id.split('-').last())", 
	:url => { :controller => :statustags, :action=>:destroy},
	:method => :delete,
	:update => "dummy-for-actions")
%>
<%= drop_receiving_element("taskboard", 
	:accept => "nametag", 
	:with   => "'project_id='+ (element.id.split('-')[2]) +'&nametag_id=' + (element.id.split('-').last())", 
	:url => { :controller => :nametags, :action => :destroy },
	:method => :delete,
	:update => "dummy-for-actions") 
%>

<div id="dummy-for-actions">
</div>
